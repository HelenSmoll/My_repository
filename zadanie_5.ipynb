    "import os.path\n",
    "\n",
    "\n",
    "dir = 'C:/Users/Алёночка/Desktop/МолБио/'\n",
    "def CountSize(dir):\n",
    "    count = 0\n",
    "\n",
    "    arr = os.listdir(dir)\n",
    "    for i in arr:\n",
    "        count += os.path.getsize(dir + i)\n",
    "\n",
    "    return count\n",
    "a = CountSize(dir)\n",
    "print(a)"
